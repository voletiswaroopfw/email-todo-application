<div class="header-items">
  <button onclick={{action "toggleEmails"}}>
   {{toggleEmailsLabel}}
  </button>
  <button onclick={{action "unreadFirst"}}>Show Unread first</button>
</div>
<div class={{emailWrapperClass}}>
  <ul class="email-list">
    {{#each emailList as |item|}}
      <li class="list-item {{item.read}}" onclick={{action "getEmailDetails" item}}>
        {{email-item item=item}}
      </li>
    {{/each}}
  </ul>
  {{#unless emailDetails.emailDetails}}
    <div class="email-details">
      {{#each defaultEmailDetails as |item|}}
        {{email-item-details item=item}}
      {{/each}}
    </div>
  {{/unless}}
</div>